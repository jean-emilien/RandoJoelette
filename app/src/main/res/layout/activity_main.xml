<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="fr.je_robert.randojoelette.MainActivity">

    <TextView
        android:id="@+id/activity_main_viewlogin"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:text="Identifiant" />

    <EditText
        android:id="@+id/activity_main_editlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/activity_main_viewpasswd"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:text="Mot de passe" />

    <EditText
        android:id="@+id/activity_main_editpasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/activity_main_btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion" />

    <TextView
        android:id="@+id/activity_main_viewlostpasswd"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:text="Mot de passe oublié ?" />

    <TextView
        android:id="@+id/activity_main_viewaddaccount"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:text="Créer un compte" />

</LinearLayout>
